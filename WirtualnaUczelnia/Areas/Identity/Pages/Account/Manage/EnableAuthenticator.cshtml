@page
@model WirtualnaUczelnia.Areas.Identity.Pages.Account.Manage.EnableAuthenticatorModel
@{
    ViewData["Title"] = "Konfiguracja 2FA";
    // UWAGA: Jeśli ManageNavPages nie działa, zakomentuj poniższą linię, to tylko do podświetlania menu
    // ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<h3>Skonfiguruj aplikację uwierzytelniającą</h3>
<hr />

<div>
    <p>Aby używać weryfikacji dwuetapowej:</p>
    <ol class="list">
        <li>
            <p>Pobierz Google Authenticator lub Microsoft Authenticator na telefon.</p>
        </li>
        <li>
            <p>Zeskanuj kod QR:</p>
            <!-- Kontener na kod QR -->
            <div id="qrCode"></div>
            <div id="qrCodeData" data-url="@Model.AuthenticatorUri" style="display:none;"></div>

            <p class="mt-3">Lub wpisz ten klucz ręcznie: <kbd>@Model.SharedKey</kbd></p>
        </li>
        <li>
            <p>Wpisz poniżej kod, który wyświetliła aplikacja:</p>
            <div class="row">
                <div class="col-md-6">
                    <form id="send-code" method="post">
                        <div class="form-group mb-3">
                            <label asp-for="Input.Code" class="control-label">Kod weryfikacyjny</label>
                            <input asp-for="Input.Code" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Weryfikuj i Włącz</button>
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </li>
    </ol>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Biblioteka do generowania QR Code -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
    <script type="text/javascript">
        new QRCode(document.getElementById("qrCode"),
            {
                text: "@Html.Raw(Model.AuthenticatorUri)",
                width: 150,
                height: 150
            });
    </script>
}