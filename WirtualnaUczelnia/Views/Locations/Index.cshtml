@using WirtualnaUczelnia.Extensions
@model IEnumerable<WirtualnaUczelnia.Models.Location>

@{
    ViewData["Title"] = "Lista Lokalizacji";
}

<h1 tabindex="0">Zarz¹dzanie Lokalizacjami</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle" aria-hidden="true"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary" aria-label="Dodaj now¹ lokalizacjê">
        <i class="bi bi-plus-lg" aria-hidden="true"></i> Dodaj now¹ lokalizacjê
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover" aria-label="Lista lokalizacji do zarz¹dzania">
        <thead class="table-dark">
            <tr>
                <th scope="col" tabindex="0">Status</th>
                <th scope="col" tabindex="0">Nazwa</th>
                <th scope="col" tabindex="0">Typ</th>
                <th scope="col" tabindex="0">Piêtro</th>
                <th scope="col" tabindex="0">Budynek</th>
                <th scope="col" tabindex="0">Media</th>
                <th scope="col" tabindex="0">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                bool isBuildingHidden = item.Building != null && item.Building.IsHidden;
                
                string typeIcon = item.Type switch
                {
                    WirtualnaUczelnia.Models.LocationType.Room => "??",
                    WirtualnaUczelnia.Models.LocationType.Corridor => "???",
                    WirtualnaUczelnia.Models.LocationType.Hall => "???",
                    WirtualnaUczelnia.Models.LocationType.Stairs => "??",
                    WirtualnaUczelnia.Models.LocationType.Elevator => "??",
                    WirtualnaUczelnia.Models.LocationType.Entrance => "??",
                    _ => "??"
                };
                
                <tr class="@(item.IsHidden || isBuildingHidden ? "table-secondary" : "")">
                    <td tabindex="0">
                        @if (item.IsHidden)
                        {
                            <span class="badge bg-secondary" aria-label="Ukryta">
                                <i class="bi bi-eye-slash" aria-hidden="true"></i> Ukryta
                            </span>
                        }
                        else if (isBuildingHidden)
                        {
                            <span class="badge bg-warning text-dark" aria-label="Budynek ukryty" title="Budynek @item.Building.Symbol jest ukryty">
                                <i class="bi bi-building-slash" aria-hidden="true"></i> Bud. ukryty
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success" aria-label="Widoczna">
                                <i class="bi bi-eye" aria-hidden="true"></i> Widoczna
                            </span>
                        }
                    </td>
                    <td class="fw-bold" tabindex="0">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td tabindex="0">
                        <span title="@item.Type.GetDisplayName()">@typeIcon</span>
                        <small class="text-muted">@item.Type.GetDisplayName()</small>
                    </td>
                    <td tabindex="0">
                        @if (item.Floor == 0)
                        {
                            <span class="badge bg-info">Parter</span>
                        }
                        else if (item.Floor > 0)
                        {
                            <span class="badge bg-primary">@item.Floor p.</span>
                        }
                        else
                        {
                            <span class="badge bg-dark">@item.Floor (piwn.)</span>
                        }
                    </td>
                    <td tabindex="0">
                        @if (item.Building != null)
                        {
                            <span class="badge @(item.Building.IsHidden ? "bg-secondary" : "bg-primary")">@item.Building.Symbol</span>
                        }
                        else
                        {
                            <span class="text-muted">-</span>
                        }
                    </td>
                    <td tabindex="0">
                        @if (!string.IsNullOrEmpty(item.ImageFileName))
                        {
                            <span class="badge bg-success me-1" title="Zdjêcie: @item.ImageFileName">
                                <i class="bi bi-image" aria-hidden="true"></i>
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(item.AudioFileName))
                        {
                            <span class="badge bg-success me-1" title="Audio: @item.AudioFileName">
                                <i class="bi bi-mic" aria-hidden="true"></i>
                            </span>
                        }
                        @if (!string.IsNullOrEmpty(item.ImageAltText))
                        {
                            <span class="badge bg-success" title="Alt: @item.ImageAltText">
                                <i class="bi bi-universal-access" aria-hidden="true"></i>
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark" title="Brak tekstu alternatywnego!">
                                <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
                            </span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Akcje dla lokalizacji @item.Name">
                            <form asp-action="ToggleVisibility" asp-route-id="@item.Id" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                @if (item.IsHidden)
                                {
                                    <button type="submit" class="btn btn-sm btn-success" 
                                            aria-label="Poka¿ lokalizacjê @item.Name"
                                            title="Poka¿">
                                        <i class="bi bi-eye" aria-hidden="true"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-sm btn-secondary" 
                                            aria-label="Ukryj lokalizacjê @item.Name"
                                            title="Ukryj">
                                        <i class="bi bi-eye-slash" aria-hidden="true"></i>
                                    </button>
                                }
                            </form>
                            
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" 
                               aria-label="Edytuj lokalizacjê @item.Name">
                                <i class="bi bi-pencil" aria-hidden="true"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" 
                               aria-label="Szczegó³y lokalizacji @item.Name">
                                <i class="bi bi-info-circle" aria-hidden="true"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" 
                               aria-label="Usuñ lokalizacjê @item.Name">
                                <i class="bi bi-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert" tabindex="0">
        Brak lokalizacji. Kliknij "Dodaj now¹ lokalizacjê", aby utworzyæ pierwsz¹.
    </div>
}

<div class="mt-3">
    <small class="text-muted">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        <strong>Typy lokalizacji:</strong> 
        ?? Pomieszczenie | ??? Korytarz | ??? Hol | ?? Schody | ?? Winda | ?? Inne
    </small>
</div>
