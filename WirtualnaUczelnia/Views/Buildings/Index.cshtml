@model IEnumerable<WirtualnaUczelnia.Models.Building>

@{ ViewData["Title"] = "Lista Budynków"; }

<h1>Zarz¹dzanie Budynkami</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowy budynek</a>
</p>
<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Symbol</th>
            <th>Nazwa</th>
            <th>Opis (skrót)</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="fw-bold">@Html.DisplayFor(modelItem => item.Symbol)</td>
            <td>@Html.DisplayFor(modelItem => item.Name)</td>
            <td>
                @if(item.Description != null && item.Description.Length > 50)
                {
                    @item.Description.Substring(0, 50) <span>...</span>
                }
                else
                {
                    @item.Description
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edytuj</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Szczegó³y</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Usuñ</a>
            </td>
        </tr>
}
    </tbody>
</table>