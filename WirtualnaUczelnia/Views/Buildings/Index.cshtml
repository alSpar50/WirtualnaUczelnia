@model IEnumerable<WirtualnaUczelnia.Models.Building>

@{ ViewData["Title"] = "Lista Budynków"; }

<h1 tabindex="0">Zarz¹dzanie Budynkami</h1>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle" aria-hidden="true"></i> @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
    </div>
}

<p>
    <a asp-action="Create" class="btn btn-primary" aria-label="Dodaj nowy budynek">
        <i class="bi bi-plus-lg" aria-hidden="true"></i> Dodaj nowy budynek
    </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-hover" aria-label="Lista budynków do zarz¹dzania">
        <thead class="table-dark">
            <tr>
                <th scope="col" tabindex="0">Status</th>
                <th scope="col" tabindex="0">Symbol</th>
                <th scope="col" tabindex="0">Nazwa</th>
                <th scope="col" tabindex="0">Opis (skrót)</th>
                <th scope="col" tabindex="0">Tekst alt.</th>
                <th scope="col" tabindex="0">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.IsHidden ? "table-secondary" : "")">
                    <td tabindex="0">
                        @if (item.IsHidden)
                        {
                            <span class="badge bg-secondary" aria-label="Ukryty">
                                <i class="bi bi-eye-slash" aria-hidden="true"></i> Ukryty
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success" aria-label="Widoczny">
                                <i class="bi bi-eye" aria-hidden="true"></i> Widoczny
                            </span>
                        }
                    </td>
                    <td class="fw-bold" tabindex="0">@Html.DisplayFor(modelItem => item.Symbol)</td>
                    <td tabindex="0">@Html.DisplayFor(modelItem => item.Name)</td>
                    <td tabindex="0">
                        @if (item.Description != null && item.Description.Length > 50)
                        {
                            @item.Description.Substring(0, 50)<span>...</span>
                        }
                        else
                        {
                            @(item.Description ?? "Brak opisu")
                        }
                    </td>
                    <td tabindex="0">
                        @if (!string.IsNullOrEmpty(item.ImageAltText))
                        {
                            <span class="badge bg-success" title="@item.ImageAltText">
                                <i class="bi bi-check-lg" aria-hidden="true"></i> Tak
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">
                                <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> Brak
                            </span>
                        }
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <!-- Przycisk Ukryj/Poka¿ -->
                            <form asp-action="ToggleVisibility" asp-route-id="@item.Id" method="post" style="display: inline;">
                                @Html.AntiForgeryToken()
                                @if (item.IsHidden)
                                {
                                    <button type="submit" class="btn btn-sm btn-success" 
                                            aria-label="Poka¿ budynek @item.Symbol - @item.Name"
                                            title="Poka¿">
                                        <i class="bi bi-eye" aria-hidden="true"></i>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-sm btn-secondary" 
                                            aria-label="Ukryj budynek @item.Symbol - @item.Name"
                                            title="Ukryj">
                                        <i class="bi bi-eye-slash" aria-hidden="true"></i>
                                    </button>
                                }
                            </form>
                            
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" 
                               aria-label="Edytuj budynek @item.Symbol - @item.Name">
                                <i class="bi bi-pencil" aria-hidden="true"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" 
                               aria-label="Szczegó³y budynku @item.Symbol - @item.Name">
                                <i class="bi bi-info-circle" aria-hidden="true"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" 
                               aria-label="Usuñ budynek @item.Symbol - @item.Name">
                                <i class="bi bi-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info" role="alert" tabindex="0">
        Brak budynków. Kliknij "Dodaj nowy budynek", aby utworzyæ pierwszy.
    </div>
}

<div class="mt-3">
    <small class="text-muted">
        <i class="bi bi-info-circle" aria-hidden="true"></i>
        <strong>Legenda:</strong> 
        <span class="badge bg-success"><i class="bi bi-eye"></i> Widoczny</span> - budynek jest widoczny dla u¿ytkowników |
        <span class="badge bg-secondary"><i class="bi bi-eye-slash"></i> Ukryty</span> - budynek jest ukryty (tylko admin widzi)
    </small>
</div>