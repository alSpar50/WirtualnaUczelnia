@model WirtualnaUczelnia.Models.Building

@{
    ViewData["Title"] = "Dodaj Budynek";
}

<h1 tabindex="0">Dodaj nowy budynek</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Symbol" class="control-label fw-bold">Symbol (np. A)</label>
                <input asp-for="Symbol" class="form-control" aria-describedby="symbolHelp" />
                <small id="symbolHelp" class="form-text text-muted">Krótki symbol identyfikuj¹cy budynek</small>
                <span asp-validation-for="Symbol" class="text-danger" role="alert"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" role="alert"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label fw-bold">Opis</label>
                <textarea asp-for="Description" class="form-control" rows="5" aria-describedby="descHelp"></textarea>
                <small id="descHelp" class="form-text text-muted">Ogólny opis budynku widoczny dla u¿ytkowników</small>
                <span asp-validation-for="Description" class="text-danger" role="alert"></span>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-image" aria-hidden="true"></i> Zdjêcie budynku
                </div>
                <div class="card-body">
                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Wybierz zdjêcie</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" aria-describedby="imageHelp" />
                        <small id="imageHelp" class="form-text text-muted">Obs³ugiwane formaty: JPG, PNG, GIF</small>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ImageAltText" class="control-label fw-bold">
                            <i class="bi bi-universal-access text-primary" aria-hidden="true"></i> Tekst alternatywny (dla czytników ekranu)
                        </label>
                        <textarea asp-for="ImageAltText" class="form-control" rows="2" 
                                  placeholder="np. Nowoczesny budynek z przeszklonym wejœciem, na pierwszym planie chodnik prowadz¹cy do drzwi wejœciowych"
                                  aria-describedby="altHelp"></textarea>
                        <small id="altHelp" class="form-text text-muted">
                            Ten tekst zostanie odczytany przez czytniki ekranu (np. NVDA) dla osób niewidomych. 
                            Opisz, co widaæ na zdjêciu.
                        </small>
                        <span asp-validation-for="ImageAltText" class="text-danger" role="alert"></span>
                    </div>
                </div>
            </div>

            <!-- Checkbox ukrycia -->
            <div class="form-check mb-3 p-3 bg-light border rounded">
                <input class="form-check-input ms-1" asp-for="IsHidden" id="isHiddenCheck" style="transform: scale(1.3);" />
                <label class="form-check-label fw-bold ms-2" for="isHiddenCheck">
                    <i class="bi bi-eye-slash text-secondary" aria-hidden="true"></i> Ukryty
                </label>
                <div class="form-text ms-1 mt-1">Zaznacz, jeœli budynek ma byæ tymczasowo niewidoczny dla u¿ytkowników.</div>
            </div>

            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-lg" aria-hidden="true"></i> Utwórz
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i> Powrót
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}