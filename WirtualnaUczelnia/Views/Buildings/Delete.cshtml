@model WirtualnaUczelnia.Models.Building

@{
    ViewData["Title"] = "Usuñ budynek";
}

<h1 tabindex="0">Usuñ budynek</h1>

@if (!string.IsNullOrEmpty((string)ViewData["ErrorMessage"]))
{
    <div class="alert alert-danger" role="alert" tabindex="0">
        <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
        @ViewData["ErrorMessage"]
    </div>
}

<div class="alert alert-warning" role="alert" tabindex="0">
    <i class="bi bi-exclamation-triangle" aria-hidden="true"></i>
    <strong>Uwaga!</strong> Czy na pewno chcesz usun¹æ ten budynek? Ta operacja jest nieodwracalna.
</div>

<div class="card shadow-sm">
    <div class="card-header bg-danger text-white">
        <h2 class="h4 mb-0" tabindex="0">@Model.Name (Symbol: @Model.Symbol)</h2>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3" tabindex="0">Opis:</dt>
            <dd class="col-sm-9" tabindex="0">@(Model.Description ?? "Brak opisu")</dd>
            
            <dt class="col-sm-3" tabindex="0">Tekst alternatywny:</dt>
            <dd class="col-sm-9" tabindex="0">@(Model.ImageAltText ?? "Nie ustawiono")</dd>
        </dl>

        @if (!string.IsNullOrEmpty(Model.ImageFileName))
        {
            <div class="mb-3">
                <strong tabindex="0">Zdjêcie:</strong>
                <img src="~/images/@Model.ImageFileName" 
                     class="img-thumbnail d-block mt-2" 
                     style="max-height: 150px;" 
                     alt="@(Model.ImageAltText ?? $"Zdjêcie budynku {Model.Name}")"
                     tabindex="0" />
            </div>
        }

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-danger" aria-label="PotwierdŸ usuniêcie budynku @Model.Name">
                    <i class="bi bi-trash" aria-hidden="true"></i> Usuñ budynek
                </button>
                <a asp-action="Index" class="btn btn-secondary" aria-label="Anuluj i wróæ do listy budynków">
                    <i class="bi bi-x-lg" aria-hidden="true"></i> Anuluj
                </a>
            </div>
        </form>
    </div>
</div>