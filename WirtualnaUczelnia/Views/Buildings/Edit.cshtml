@model WirtualnaUczelnia.Models.Building

@{
    ViewData["Title"] = "Edytuj Budynek";
}

<h1 tabindex="0">Edytuj budynek</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <!-- WA¯NE: enctype jest niezbêdny -->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImageFileName" />

            <div class="form-group mb-3">
                <label asp-for="Symbol" class="control-label fw-bold">Symbol</label>
                <input asp-for="Symbol" class="form-control" />
                <span asp-validation-for="Symbol" class="text-danger" role="alert"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label fw-bold">Nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" role="alert"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="control-label fw-bold">Opis</label>
                <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger" role="alert"></span>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-light fw-bold">
                    <i class="bi bi-image" aria-hidden="true"></i> Zdjêcie budynku
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Obecne zdjêcie:</strong></p>
                    @if (!string.IsNullOrEmpty(Model.ImageFileName))
                    {
                        <img src="~/images/@Model.ImageFileName" 
                             class="img-thumbnail mb-2" 
                             style="max-height: 150px;" 
                             alt="@(Model.ImageAltText ?? $"Zdjêcie budynku {Model.Name}")"
                             tabindex="0" />
                        <div><small class="text-muted">Plik: @Model.ImageFileName</small></div>
                    }
                    else
                    {
                        <span class="text-muted" tabindex="0">Brak zdjêcia</span>
                    }

                    <div class="mt-3">
                        <label class="control-label fw-bold">Zmieñ zdjêcie</label>
                        <input type="file" name="imageFile" class="form-control" accept="image/*" />
                    </div>

                    <div class="form-group mt-3">
                        <label asp-for="ImageAltText" class="control-label fw-bold">
                            <i class="bi bi-universal-access text-primary" aria-hidden="true"></i> Tekst alternatywny (dla czytników ekranu)
                        </label>
                        <textarea asp-for="ImageAltText" class="form-control" rows="2" 
                                  placeholder="np. Nowoczesny budynek z przeszklonym wejœciem..."
                                  aria-describedby="altHelp"></textarea>
                        <small id="altHelp" class="form-text text-muted">
                            Ten tekst zostanie odczytany przez czytniki ekranu (np. NVDA) dla osób niewidomych.
                        </small>
                        <span asp-validation-for="ImageAltText" class="text-danger" role="alert"></span>
                    </div>
                </div>
            </div>

            <!-- Checkbox ukrycia -->
            <div class="form-check mb-3 p-3 @(Model.IsHidden ? "bg-warning bg-opacity-25" : "bg-light") border rounded">
                <input class="form-check-input ms-1" asp-for="IsHidden" id="isHiddenCheck" style="transform: scale(1.3);" />
                <label class="form-check-label fw-bold ms-2" for="isHiddenCheck">
                    <i class="bi bi-eye-slash text-secondary" aria-hidden="true"></i> Ukryty
                </label>
                <div class="form-text ms-1 mt-1">
                    Zaznacz, jeœli budynek ma byæ tymczasowo niewidoczny dla u¿ytkowników.
                    @if (Model.IsHidden)
                    {
                        <strong class="text-warning">Ten budynek jest obecnie ukryty!</strong>
                    }
                </div>
            </div>

            <div class="form-group d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save" aria-hidden="true"></i> Zapisz zmiany
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left" aria-hidden="true"></i> Powrót
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}