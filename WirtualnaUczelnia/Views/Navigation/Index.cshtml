@{
    ViewData["Title"] = "Znajdź drogę";
    bool isLoggedIn = ViewBag.IsLoggedIn ?? false;
    bool isDisabledUser = ViewBag.IsDisabledUser ?? false;
}

<h1 class="visually-hidden" tabindex="0">Znajdź drogę - nawigacja po uczelni</h1>

<div class="card-body">
    
    <!-- Komunikat o błędzie -->
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert" tabindex="0">
            <i class="bi bi-exclamation-triangle" aria-hidden="true"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Zamknij"></button>
        </div>
    }
    
    @if (isLoggedIn)
    {
        @if (isDisabledUser)
        {
            <div class="alert alert-info border-info" role="status" tabindex="0">
                <i class="bi bi-person-wheelchair" aria-hidden="true"></i> Tryb: <strong>Osoba z niepełnosprawnością</strong>
                <br><small>Trasy będą omijać schody i wybierać dostępne przejścia.</small>
                <br><small class="text-muted">Ustawienie możesz zmienić w <a asp-area="Identity" asp-page="/Account/Manage/Accessibility">ustawieniach konta</a>.</small>
            </div>
        }
        else
        {
            <div class="alert alert-light border" role="status" tabindex="0">
                <i class="bi bi-person-walking" aria-hidden="true"></i> Tryb: <strong>Standardowy</strong>
                <br><small>Wszystkie trasy są dostępne.</small>
                <br><small class="text-muted">Ustawienie możesz zmienić w <a asp-area="Identity" asp-page="/Account/Manage/Accessibility">ustawieniach konta</a>.</small>
            </div>
        }
    }

    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h2 class="mb-0" tabindex="0">
                        <i class="bi bi-map" aria-hidden="true"></i> Nawigacja po Uczelni
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="FindRoute" role="form" aria-label="Formularz wyszukiwania drogi">
                        <div class="form-group mb-3">
                            <label for="startLocation" class="fw-bold">Gdzie jesteś?</label>
                            <select name="startId" id="startLocation" class="form-control" asp-items="ViewBag.Locations" 
                                    aria-describedby="startHelp" required>
                                <option value="">-- Wybierz lokalizację startową --</option>
                            </select>
                            <small id="startHelp" class="form-text text-muted">Wybierz swoją obecną lokalizację</small>
                        </div>

                        <div class="text-center mb-3" aria-hidden="true">
                            <i class="bi bi-arrow-down-circle fs-3 text-muted"></i>
                        </div>

                        <div class="form-group mb-4">
                            <label for="endLocation" class="fw-bold">Gdzie chcesz dojść?</label>
                            <select name="endId" id="endLocation" class="form-control" asp-items="ViewBag.Locations" 
                                    aria-describedby="endHelp" required>
                                <option value="">-- Wybierz lokalizację docelową --</option>
                            </select>
                            <small id="endHelp" class="form-text text-muted">Wybierz miejsce docelowe</small>
                        </div>

                        @* Przełącznik trybu windy - widoczny TYLKO dla niezalogowanych użytkowników *@
                        @if (!isLoggedIn)
                        {
                            <div class="form-group mb-4 p-3 bg-light border rounded" role="group" aria-labelledby="wheelchairModeLabel">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="wheelchairMode" value="true" 
                                           id="wheelchairModeCheck" @(isDisabledUser ? "checked" : "")
                                           style="transform: scale(1.3);"
                                           aria-describedby="wheelchairModeHelp">
                                    <label class="form-check-label ms-2 fw-bold" for="wheelchairModeCheck" id="wheelchairModeLabel">
                                        <i class="bi bi-person-wheelchair text-primary" aria-hidden="true"></i>
                                        Tryb winda (dla osób na wózku)
                                    </label>
                                </div>
                                <small id="wheelchairModeHelp" class="form-text text-muted d-block mt-2">
                                    <i class="bi bi-info-circle" aria-hidden="true"></i>
                                    Zaznacz tę opcję, jeśli potrzebujesz trasy bez schodów (tylko winda i dostępne przejścia).
                                </small>
                            </div>
                        }

                        <button type="submit" class="btn btn-primary w-100 btn-lg" aria-label="Wyszukaj drogę między wybranymi lokalizacjami">
                            <i class="bi bi-signpost-split" aria-hidden="true"></i> Pokaż drogę
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Walidacja po stronie klienta - sprawdź czy start != koniec
        document.querySelector('form').addEventListener('submit', function(e) {
            var start = document.getElementById('startLocation').value;
            var end = document.getElementById('endLocation').value;
            
            if (start === end && start !== '') {
                e.preventDefault();
                alert('Lokalizacja startowa i docelowa nie mogą być takie same!');
            }
        });
    </script>
}