@model List<WirtualnaUczelnia.Services.NavigationStep>

@{ ViewData["Title"] = "Twoja Trasa"; }

<div class="container mt-4">
    <h2 class="mb-4">Trasa: <span class="text-muted">@ViewBag.StartName</span> &rarr; <span class="text-success">@ViewBag.EndName</span></h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            Nie znaleziono drogi pomiędzy tymi punktami. Być może brakuje połączeń w bazie lub trasa jest niedostępna (np. brak windy).
        </div>
        <a asp-action="Index" class="btn btn-secondary">Szukaj innej trasy</a>
    }
    else
    {
        <div class="list-group shadow-sm">
            @for (int i = 0; i < Model.Count; i++)
            {
                var step = Model[i];
                <a href="/Explore?id=@step.TargetLocationId" class="list-group-item list-group-item-action d-flex align-items-center p-3">
                    <div class="badge bg-primary rounded-pill me-3 fs-5">@(i + 1)</div>
                    <div class="fs-2 me-3">@step.Icon</div>
                    <div class="flex-grow-1 fs-5">@step.Instruction</div>
                    <i class="bi bi-chevron-right text-muted"></i>
                </a>
            }
        </div>
        
        <div class="mt-4">
            <a href="/Explore?id=@Model.First().TargetLocationId" class="btn btn-success btn-lg">
                <i class="bi bi-play-circle"></i> Rozpocznij nawigację wirtualną
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg ms-2">Nowe wyszukiwanie</a>
        </div>
    }
</div>