@using WirtualnaUczelnia.Extensions
@model WirtualnaUczelnia.Models.Location

@{
    ViewData["Title"] = "Wirtualny Spacer";
}

<div class="container text-center mt-4">
    <div class="row">
        <!-- Główny blok ze zdjęciem i nawigacją -->
        <div class="col-md-8 offset-md-2">

            <div class="card shadow-sm">
                <!-- Zdjęcie lokalizacji -->
                <div class="position-relative">
                    <!-- Obrazek -->
                    <img src="~/images/@Model.ImageFileName" class="card-img-top img-fluid" alt="@Model.Name" onerror="this.src='https://via.placeholder.com/800x600?text=Brak+Zdjecia'">

                    <!-- Overlay z przyciskami nawigacji (opcjonalnie można to zrobić jako mapę obrazkową, tu wersja prostsza z przyciskami na dole) -->
                </div>

                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <p class="card-text lead">@Model.Description</p>

                    <!-- Odtwarzacz Audio -->
                    @if (!string.IsNullOrEmpty(Model.AudioFileName))
                    {
                        <div class="my-3">
                            <audio controls autoplay>
                                <source src="~/audio/@Model.AudioFileName" type="audio/mpeg">
                                Twoja przeglądarka nie obsługuje elementu audio.
                            </audio>
                        </div>
                    }

                    <hr />

                    <!-- Panel Nawigacji (Strzałki) -->
                    <h4 class="mb-3">Gdzie chcesz iść?</h4>
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        @foreach (var transition in Model.Transitions)
                        {
                            string btnClass = "btn-primary";
                            string icon = "";

                            switch (transition.Direction)
                            {
                                case WirtualnaUczelnia.Models.Direction.Forward:
                                    btnClass = "btn-success";
                                    icon = "⬆️";
                                    break;
                                case WirtualnaUczelnia.Models.Direction.Back:
                                    btnClass = "btn-secondary";
                                    icon = "⬇️";
                                    break;
                                case WirtualnaUczelnia.Models.Direction.Left:
                                    btnClass = "btn-info";
                                    icon = "⬅️";
                                    break;
                                case WirtualnaUczelnia.Models.Direction.Right:
                                    btnClass = "btn-info";
                                    icon = "➡️";
                                    break;
                            }

                            <a asp-action="Index" asp-route-id="@transition.TargetLocationId" class="btn @btnClass btn-lg px-4">
                                @icon @transition.Direction.GetDisplayName()
                            </a>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

